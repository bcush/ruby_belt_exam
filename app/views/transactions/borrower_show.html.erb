Name: <%= @current_borrower.first_name %> <%= @current_borrower.last_name %> <br />
Amount Needed: <%= number_to_currency(@current_borrower.requested) %>
Amount Raised: <%= number_to_currency(@current_borrower.raised) %>

<h3>List of people who lend you money:</h3>
<% if @lenders %>
<table>
<thead>
<tr>
  <td>Name</td>
  <td>Email</td>
  <td>Amount Lent</td>
</tr>
</thead>
<% @lenders.each do |l| %>
<tr>
  <td> <%= l.first_name %> <%= l.last_name %> </td>
  <td> <%= l.email %> </td>
  <td> <%= number_to_currency(l.amount) %> </td>
</tr>
<% end %>
</table>
<% end %>
